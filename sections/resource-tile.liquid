{% assign resource_tile_fallback_image = 'resource-tile-placeholder.jpg' | asset_url %}

<div class="sb-resource-tile" data-sb-reveal>
  {% if section.settings.title != blank %}
    <h2 class="sb-resource-tile__title font-title weight-bold">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="sb-resource-tile__grid">
    {% for block in section.blocks %}
      {% if block.settings.link != blank %}
        {% assign tile_href = block.settings.link %}
      {% else %}
        {% assign tile_href = '#' %}
      {% endif %}

      {% if block.settings.image != blank %}
        {% assign tile_image = block.settings.image | image_url: width: 680 %}
      {% else %}
        {% assign tile_image = resource_tile_fallback_image %}
      {% endif %}

      <article class="sb-resource-tile__item" data-sb-reveal-item {{ block.shopify_attributes }}>
        <a class="sb-resource-tile__link" href="{{ tile_href }}">
          <div class="sb-resource-tile__media">
            <img
              src="{{ tile_image }}"
              alt="{{ block.settings.label | escape }}"
              loading="lazy"
              width="340"
              height="260"
            >
          </div>

          <div class="sb-resource-tile__text-wrap">
            <p class="sb-resource-tile__text font-body weight-bold">{{ block.settings.label }}</p>
          </div>
        </a>
      </article>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .sb-resource-tile__title {
    margin: 0 0 var(--sb-space-24);
  }

  .sb-resource-tile__grid {
    display: grid;
    gap: var(--sb-space-24);
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .sb-resource-tile__item {
    min-width: 0;
  }

  .sb-resource-tile__link {
    align-items: stretch;
    background: var(--sb-color-neutral-200);
    border-radius: var(--sb-radius-card);
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: var(--sb-space-30);
    text-decoration: none;
    transform: scale(1);
    transition: transform 220ms ease;
  }

  .sb-resource-tile__link:hover,
  .sb-resource-tile__link:focus-visible {
    transform: translateY(-1px) scale(1.015);
  }

  .sb-resource-tile__media {
    aspect-ratio: 340 / 260;
    border-radius: 24px;
    overflow: hidden;
    width: 100%;
  }

  .sb-resource-tile__media img {
    display: block;
    height: 100%;
    object-fit: cover;
    width: 100%;
  }

  .sb-resource-tile__text-wrap {
    align-items: center;
    display: flex;
    flex: 1 1 auto;
    justify-content: center;
    padding-top: var(--sb-space-30);
    text-align: center;
  }

  .sb-resource-tile__text {
    color: var(--sb-color-neutral-900);
    margin: 0;
  }

  @media (min-width: 750px) {
    .sb-resource-tile__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Resource tile",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Section title"
    }
  ],
  "blocks": [
    {
      "type": "tile",
      "name": "Resource tile",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Target 340x260 at 2x export (680x520)."
        },
        {
          "type": "text",
          "id": "label",
          "label": "Text",
          "default": "Resource tile"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Resource tile",
      "blocks": [
        {
          "type": "tile"
        },
        {
          "type": "tile"
        },
        {
          "type": "tile"
        }
      ]
    }
  ]
}
{% endschema %}
