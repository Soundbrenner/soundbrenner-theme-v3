{% assign hero_video_video = section.settings.youtube_url %}

<section class="sb-hero-video" data-sb-reveal>
  <div class="sb-hero-video__inner">
    <div class="sb-hero-video__frame-wrap" data-sb-reveal-item>
      {% if hero_video_video != blank and hero_video_video.type == 'youtube' %}
        <iframe
          class="sb-hero-video__frame"
          src="https://www.youtube.com/embed/{{ hero_video_video.id }}"
          title="Hero video"
          loading="lazy"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
        ></iframe>
      {% else %}
        <div class="sb-hero-video__placeholder font-body weight-regular">
          Add a YouTube video URL in the section settings.
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .sb-hero-video {
    width: 100%;
  }

  .sb-hero-video__inner {
    margin-inline: auto;
    max-width: 800px;
    width: 100%;
  }

  .sb-hero-video__frame-wrap {
    aspect-ratio: 16 / 9;
    border-radius: 24px;
    overflow: hidden;
    width: 100%;
  }

  .sb-hero-video__frame {
    border: 0;
    display: block;
    height: 100%;
    width: 100%;
  }

  .sb-hero-video__placeholder {
    align-items: center;
    background: var(--sb-color-neutral-200);
    color: var(--sb-color-neutral-900);
    display: flex;
    height: 100%;
    justify-content: center;
    padding: var(--sb-space-24);
    text-align: center;
    width: 100%;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero video",
  "settings": [
    {
      "type": "video_url",
      "id": "youtube_url",
      "label": "YouTube URL",
      "accept": ["youtube"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
    }
  ],
  "presets": [
    {
      "name": "Hero video"
    }
  ]
}
{% endschema %}
