[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "inter_n4",
        "label": "t:general.primary"
      },
      {
        "type": "font_picker",
        "id": "type_display_font",
        "default": "merriweather_n4",
        "label": "Display"
      }
    ]
  },
  {
    "name": "Theme",
    "settings": [
      {
        "type": "select",
        "id": "theme_mode",
        "label": "Theme mode",
        "default": "dark",
        "options": [
          {
            "value": "dark",
            "label": "Dark"
          },
          {
            "value": "light",
            "label": "Light"
          },
          {
            "value": "auto",
            "label": "Auto (system)"
          }
        ]
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "range",
        "id": "max_page_width",
        "min": 960,
        "max": 1600,
        "step": 10,
        "unit": "px",
        "label": "Max page width",
        "default": 1240
      },
      {
        "type": "range",
        "id": "desktop_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Desktop side margin",
        "default": 60
      },
      {
        "type": "range",
        "id": "mobile_page_margin",
        "min": 8,
        "max": 40,
        "step": 1,
        "unit": "px",
        "label": "Mobile side margin",
        "default": 16
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  }
